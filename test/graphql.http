# GET ALL USER
GRAPHQL http://localhost:3001/graphql

query GET_ALL {
   findAll {
   id,
    name,
    document,
    phones,
    birthDate,
    addresses
  }
}

###
# GET ONE USER BY ID
GRAPHQL http://localhost:3001/graphql

query GET_ONE_BY_ID {
  user(id: 1) {
    name,
    id
  }
}

###
# SAVE USER
GRAPHQL http://localhost:3001/graphql

mutation SAVE {
  createUser(createUserInput: {
    name: "Dona Maria",
    document: "123456",
    phones: [
          "123-456-7890",
          "987-654-3210"
        ],
    birthDate: "1986-01-01",
    addresses: [
          "123 Main St, CityA",
          "456 Elm St, CityB"
        ]
  }) {
    id,
    name,
    document
  }
}

###
# UPDATE USER
GRAPHQL http://localhost:3001/graphql

mutation UPDATE {
  updateUser(id: "1", updateUserInput: {
    name: "Don Julio",
    document: "123456",
    phones: [
          "123-456-7890",
          "987-654-3210"
        ],
    birthDate: "1986-01-01",
    addresses: [
          "123 Main St, CityA",
          "456 Elm St, CityB"
        ]
  }) {
    id,
    name,
    document
  }
}


